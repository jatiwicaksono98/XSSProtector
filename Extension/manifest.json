{
  "manifest_version": 2,
  "name": "XSS Protector",
  "version": "1.0",
  "description": "Protecting your browser since 2021",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "alarms",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "contextMenus",
    "tabs",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_action": { "default_popup": "popup.html" }
}
